<RelativeLayout
    android:id="@+id/layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/sepuluh"
    android:layout_marginLeft="@dimen/sepuluh"
    android:layout_marginTop="@dimen/tiga_puluh"
    android:background="@drawable/bentuk_luar"
    android:orientation="vertical"
    android:padding="@dimen/empat">

    <TextView
        android:id="@+id/judul_aplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDokterLele"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lima"
        android:fontFamily="sans-serif"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_sedang"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ImageView
        android:id="@+id/imageViewDokterLele"
        android:layout_width="@dimen/delapan_puluh"
        android:layout_height="@dimen/delapan_puluh"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sepuluh"
        app:srcCompat="@drawable/ic_launcher_round" />

</RelativeLayout>