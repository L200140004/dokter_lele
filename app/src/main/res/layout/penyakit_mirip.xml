<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureWithLargestChild="false"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/textViewPenyakitMirip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sepuluh"
        android:layout_marginLeft="@dimen/sepuluh"
        android:layout_marginRight="@dimen/sepuluh"
        android:layout_marginTop="@dimen/sepuluh"
        android:clickable="false"
        android:text="@string/perkiraan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false" />

    <ListView
        android:id="@+id/daftar_penyakit"
        android:layout_below="@+id/textViewPenyakitMirip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sepuluh"
        android:layout_marginRight="@dimen/sepuluh"
        android:layout_marginBottom="@dimen/lima_belas"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/penyakit_selesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/sepuluh"
        android:layout_marginRight="@dimen/sepuluh"
        android:layout_marginBottom="@dimen/lima_belas"
        android:layout_below="@+id/daftar_penyakit"
        android:text="@string/selesai"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true" />

</RelativeLayout>